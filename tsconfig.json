{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/context/*": ["context/*"],
      "@/pages/*": ["pages/*"],
      "@/public/*": ["public/*"],
      "@/services/*": ["services/*"],
      "@/styles/*": ["styles/*"],
      "@/util/*": ["util/*"],
      "@/lib/*": ["lib/*"]
    },
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["next/types/global", "node", "dotenv"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    "pages/api/auth/[...nextauth].ts"
  ],
  "exclude": ["node_modules", "next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
